<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class='row'>
    <div class="col-md-6">
      <h1>Create a new Portfolio Item</h1>     
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :subtitle %>
          <%= form.text_field :subtitle, class: 'form-control'  %>
        </div>
      </div>
    
    <div class="col-md-6">
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 10  %>
  
      </div>
    </div>
  </div>

  <hr>

  
  <div class="col-md-12">
      <h2> Technologies Used </h2>
        <div>
        <%= form.fields_for :technologies do |technology_form| %>
        <div class="form-group">
            <%= technology_form.label :name%>
            <%= technology_form.text_field :name, class: 'form-control' %>
        </div>
        <% end %>
      </div>

  <div class="form-group">
    <%= form.label :thumb_image %>
    <%= form.text_field :thumb_image, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: 'btn btn-primary'  %>
             </div>
          </div>
    <% end %>
    
    